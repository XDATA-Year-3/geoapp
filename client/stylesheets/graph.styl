@import 'nib'

#ga-graph-page
  left 0
  right inherit
  z-index 2
  .circle-btn
    margin 0
    border-radius 50%
    width 19px
    height 19px
    padding 0
  .no-graph
    .ga-add-graph
      float right
  .graph
    line-height 0
    margin-bottom 5px
    .button-region
      display inline-block
      width 19px
      vertical-align top
      margin-left 3px
      .circle-btn
        margin-bottom 20px
      .circle-btn:last-of-type
        display none
  .graph:last-of-type
    margin-bottom 0
    .button-region
      .circle-btn:last-of-type
        position absolute
        bottom 0
        margin-bottom 8px
        display block
  .graph-region
    width 500px
    height 200px
    display inline-block
    svg
      font-size 10px
      width 100%
      height 100%
      background rgba(232, 255, 255, 0.75)
      .line
        fill none
        stroke-width 1px
      .axis path,.axis line
        fill none
        stroke black
        shape-rendering crispEdges
#ga-graph-settings
  label
    font-weight normal
    margin-bottom 0
  .radio
    margin 0
  .ga-graph-type
    margin-bottom 10px
  .ga-graph-bin
    margin-bottom 10px
    .radio-inline
      padding-left 10px
      input[type="radio"]
        float inherit
        margin-left 0
        margin-right 5px
  #ga-dataset-list
    margin 0
    padding-left 15px
  .ga-dataset-entry
    list-style none
    .drag-handle
      font-weight bold
      font-family Sans-Serif
      font-size 15px
      color #5F9EDF
      padding-right 10px
    input[type="checkbox"]
      margin-right 8px
    .ga-dataset-name
      display inline-block
    &.sortable-ghost
      background #CCC
      opacity 0.25
  .g-validation-failed-message:empty
    display none

.c3-tooltip
  th
    line-height 1em
    font-size 13px
.c3-axis-x-label,.c3-axis-y-label
  font-size 12px
