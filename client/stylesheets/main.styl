@import 'nib'

html, body
  height 100%
  overflow hidden

*
  font-family 'Droid Sans',sans-serif
  font-smoothing antialiased

body
  padding 0
  margin 0
  word-wrap break-word

a
  cursor pointer
  text-decoration none !important

#ga-main-map
  width 100%
  height 100%
  position absolute

#ga-main-page
  position absolute
  .panel
    background none
  .panel-title
    font-size 14px
    color black
  .panel-heading
    padding 5px
    background-color rgba(255,128,0,0.75)
  .panel-default
    border 0
  .panel-body
    padding 5px
    background-color rgba(255,160,160,0.75)
  .panel-group
    margin-bottom 1px
  .form-group
    margin-bottom 0
  .form-control
    width auto
    display inline-block
    color black
  label
    display inline-block
    padding-right 5px
    font-size 12px
    margin 0
  .btn-sm
    font-weight bold
    margin-top 2px
    margin-right 5px
  #ga-pickup-date
    width 230px
  #ga-play
    width 70px
    span.canpause
      display none
    &[value=play] span.canplay
      display none
    &[value=play] span.canpause
      display inherit

.daterangepicker
  .ranges
    width auto
    .range_inputs>div
      float none
      &:nth-child(2)
        padding-left 0
    .input-mini
      width 105px
  .applyBtn, .cancelBtn
    width 60px
  .cancelBtn
    display block
    margin-top 5px
  .calendar td, .calendar th
    min-width 28px
    padding 2px
  [class^="icon-"]:before, [class*=" icon-"]:before
    font-family inherit
.btn-sm
  padding 5px 7px
#ga-step-slider-ctl
  width 290px
  margin-left 5px
  height 30px
  .slider-handle
    width 6px
    height 18px
    margin-left -3px
    margin-top -4px
  .slider-selection
    background none
#ga-cycle-display
  max-width 205px
  white-space nowrap
  overflow hidden
