@import 'nib'

html, body
  height 100%
  overflow hidden

*
  font-family 'Droid Sans',sans-serif
  font-smoothing antialiased

body
  padding 0
  margin 0
  word-wrap break-word

a
  cursor pointer
  text-decoration none !important

#ga-main-map
  width 100%
  height 100%
  position absolute

#ga-main-page
  position absolute
  .panel
    background none
  .panel-title
    font-size 14px
  .panel-heading
    padding 5px
    background-color rgba(255,128,0,0.75)
  .panel-default
    border 0
  .panel-body
    padding 5px
    background-color rgba(255,160,160,0.75)
  .form-group
    margin-bottom 0
  .form-control
    width auto
    display inline-block
    color black
  label
    display inline-block
    padding-right 5px
    font-size 12px
    margin 0
  .btn-sm
    font-weight bold
